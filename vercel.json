{
  "version": 2,
  "buildCommand": "npm install --workspaces && npm run build --workspace=frontend && cp -r frontend/dist dist",
  "outputDirectory": "dist",
  "functions": {
    "backend/server.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/server.js"
    }
  ]
}
